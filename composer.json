{
    "name": "arma/flarum-wordpress-auth",
    "description": "Allow users to log in with Twitter.",
    "type": "flarum-extension",
    "keywords": ["authentication"],
    "license": "MIT",
    "authors": [
        {
            "name": "Arslan Imamutdinov",
            "email": "arslan92@mail.ru"
        }
    ],
    "support": {
        "issues": "https://github.com/Konstantin007/flarum-wordpress-auth/issues",
        "source": "https://github.com/Konstantin007/flarum-wordpress-auth"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.5",
        "league/oauth1-client": "^1.6"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        },
        "flarum-extension": {
            "title": "Wordpress auth extension",
            "icon": {
                "name": "line-chart",
                "backgroundColor": "#01a6cb",
                "color": "#ffffff"
            }
        }
    },
    "autoload": {
        "psr-4": {
            "Arma\\Auth\\Wordpress\\": "src/"
        }
    }
}